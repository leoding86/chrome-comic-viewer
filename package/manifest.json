{
    "manifest_version": 2,

    // Firefox only
    // "applications": {
    //     "gecko": {
    //         "id": "{55239418-cdf9-4a1d-9b38-d5f47240b57f}",
    //         "strict_min_version": "45.0"
    //     }
    // },

    "name": "__MSG_extName__",
    "short_name": "MVR",
    "description": "__MSG_extDescription__",
    "version": "0.7.2",
    "default_locale": "en",
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },

    "browser_action": {
        "default_icon": "assets/icon128.png",
        "default_popup": "pages/popup.html",
        "default_title": "__MSG_extName__"
    },

    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "*://*.readcomics.tv/*",
        "*://*.readcomiconline.to/*",
        "*://*.mangapanda.com/*",
        "*://*.mangastream.com/*",
        "*://*.readms.net/*",
        "*://*.readms.com/*",
        "*://*.eatmanga.com/*",
        "*://*.kissmanga.com/*",
        "*://*.mangadoom.co/*",
        "*://*.mangapark.me/*",
        "*://*.googleusercontent.com/*"
    ],

    "content_scripts": [
        {
            "matches": [
                "*://*.readcomics.tv/*",
                "*://*.readcomiconline.to/*",
                "*://*.dm5.com/*",
                "*://*.cdndm5.com/*",
                "*://*.mangapanda.com/*",
                "*://*.mangastream.com/*",
                "*://*.readms.com/*",
                "*://*.readms.net/*",
                "*://*.eatmanga.com/*",
                "*://*.kissmanga.com/*",
                "*://*.mangadoom.co/*",
                "*://*.mangapark.me/*",
                "*://*.googleusercontent.com/*"
            ],
            "js": [
                "build/bundle.content_script.js"
            ]
        }
    ],

    "background": {
        "scripts": ["build/bundle.background.js"]
    },

    "web_accessible_resources": [
        "build/*",
        "assets/*"
    ],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}